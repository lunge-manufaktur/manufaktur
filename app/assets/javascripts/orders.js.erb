$('#order_contact_id').change(function() {

	var order_id = $('form').data('item-id');

	console.log('current order_id: ' + order_id);

  $('#select_addresses').load (
  		"/orders/" + order_id + "/update_addresses",
  		{ "contact_id": $('#order_contact_id').val() }
  );

});

// toggle search panel

$('#search-toggle').click(function() {

	console.log('search-toggle clicked');

	$('#search').slideToggle(200);

	$('#search-toggle').toggleClass("enabled")

});

$('.order-item').click(function() {
 	var order_id = $(this).data("id");

	$('#' + order_id + '_content').slideToggle(100);
	$(this).toggleClass('enabled');

	console.log(order_id + "was triggered.");

});

