// input quantites

$('form').on('change', '.size-input', function () {

    var product_id = $(this).closest('#line_item').find('.order_line_items_product_id').val();
    var line_item_temp_id = $(this).closest('#line_item').data('item-temp-id');
    var quantity = 0;
    
    $(this).closest('#line_item').find('.size-input').each(function() {
        quantity += Number($(this).val());
    });

    console.log('line_items#change_quantity triggered');

    console.log(
        'quantity: ' + quantity + '\n' +
        'Product_id: ' + product_id
    );

    $.ajax({
        url: "/line_items/change_quantity",
        type: "post",
        data: {
            "product_id": product_id,
            "temp_id": line_item_temp_id,
            "quantity": quantity
        },
        error: function(data) {
            alert("Fehler");
        },
        success: function(data) {

        }
    });

});



// select product_id

$('body').on('change', '.order_line_items_product_id', function () {

    var order_id = $('form').data('order-id');
    var line_item_temp_id = $(this).closest('#line_item').data('item-temp-id');
    var product_id = $(this).val();
    var quantity = $(this).closest('#line_item').find('#quantity').text();

    console.log('line_items#select_product triggered');

    console.log(
        'order_id: ' + order_id + '\n' +
        'line_item_temp_id: ' + line_item_temp_id + '\n' +
        'product_id: ' + product_id + '\n' +
        'quantity: ' + quantity
    );


    $.ajax({
        url: "/line_items/select_product",
        data: { 
            "product_id": product_id,
            "temp_id": line_item_temp_id,
            "quantity": quantity
        },
        type: "post",
        
        success: function(data) {
            data
        }
    });

});