= render "series/index/sidebar"
= render "series/index/breadcrumbs"
= render "series/shared/search"

- content_for :header
  .header-title
    h1 Serien
  .header-actions
    = link_to "Neue Serie", new_series_path, class: "button"

section
  table
    thead
      tr
        th width=80 Serie
        th colspan=3 Artikel
        th Termin
        th.text-right Geplante Menge
        th
    tbody
      - @series.each do |series|
        = render "series/index/series", series: series

- content_for :footer
  = paginate @series