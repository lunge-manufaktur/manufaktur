<!-- End Navigation -->

<!-- Header -->

<% content_for :title_bar do %>
	<div class="row">
	  <div class="large-9 small-9 columns">
	    <h1><%= @product.name %></h1>
	  </div>
	  <div class="large-3 small-3 columns">
	    <h2><%= link_to '', new_product_path, class: "ion-ios7-trash-outline toolbar right" %></h2>
	  </div>
  </div>
<% end %>

<!-- End Header -->

<!-- Side Bar -->

<%= render "products/sidebar" %>

<!-- End Side Bar -->

<!-- MAIN CONTENT -->

<% content_for :main_content do %>

  <div class="large-5 small-12 columns">
  	<h3>Allgemein</h3>
		<p>
			<label>Name</label>
			<%= @product.name %>
		</p>

		<p>
			<label>Artikelnummer</label>
			<%= @product.sku %>
		</p>

		<p>
			<label>Farbe</label>
			<%= @product.color_text %>
		</p>

		<p>
			<label>Größensystem</label>
			<%= @product.variation_set.try(:name) %>
		</p>

		<h3>Preis</h3>

		<p>
			<label>Preis</label>
			<%= number_to_currency(@product.price, unit: "€") %>
		</p>

		<p>
			<label>Mehrwertsteuer</label>
			<%= @product.vat %>
		</p>

  </div>

  <div class="large-5 small-12 columns">
  	<h3>Bilder</h3>
		<% @product.product_images.each do |product_image| %>
			<p><%= image_tag(product_image.image.url(:large)) %></p>
		<% end %>
  </div>

  <div class="row">
			<div class="small-12 medium-4 large-6 columns">
			  <ul class="inline-list">
			  	<li><%= link_to 'Zurück', products_path, class: "button secondary float_left" %></li>
			  </ul>
	  	</div>
	  	<div class="small-12 medium-8 large-6 columns">
	  		<ul class="inline-list float_right">
	  			<li><%= link_to "Löschen", @product, confirm: "Wirklich löschen?", method: :delete, class: "button alert" %></li>
	  			<li><%= link_to "Bearbeiten", edit_product_path, class: "button" %></li>
	  		</ul>
	  	</div>
  	</div>

<% end %>