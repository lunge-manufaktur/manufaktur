<% @section = "Artikel" %>

<!-- Header -->

<% content_for :breadcrumbs do %>
	<div class="row">
		<div class="small-12 columns">
			<ul class="breadcrumbs">
				<li><%= link_to "Home", "/" %></li>
				<li><%= render "/layouts/breadcrumbs/sections" %></li>
				<li><%= render "/layouts/breadcrumbs/product_items" %></li>
				<li>Bearbeiten</li>			
			</ul>
		</div>
	</div>
<% end %>

<% content_for :title_bar do %>
	<div class="row">
	  <div class="large-12 columns">
	    <h1 class="page-heading"><%= @product.name %> bearbeiten</h1>
	  </div>
	</div>
<% end %>


<!-- Side Bar -->
<%= render "products/sidebar" %>



<!-- MAIN CONTENT -->
<% content_for :main_content do %>

	<%= render "products/form" %>

<% end %>