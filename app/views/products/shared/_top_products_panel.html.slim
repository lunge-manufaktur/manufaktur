.panel
  .panel__bar.panel__bar--top
    h5.panel__title Beliebteste Schuhe
  .panel__section
    ul.inline-list.small
      li = link_to Date.today.year, set_products_period_path(from: Date.today.beginning_of_year, to: Date.today), class: "link", remote: true
      li = link_to Date.today.prev_year.year, set_products_period_path(from: Date.today.prev_year.beginning_of_year, to: Date.today.prev_year.end_of_year), class: "link", remote: true
      li = link_to "30 Tage", set_products_period_path(from: 30.days.ago.to_date, to: Date.today), class: "link", remote: true
      li = link_to "90 Tage", set_products_period_path(from: 90.days.ago.to_date, to: Date.today), class: "link", remote: true
      li = link_to "1 Jahr", set_products_period_path(from: 1.year.ago.to_date, to: Date.today), class: "link", remote: true
  .panel__body style="max-height: 500px"
    table
      thead
        tr
          th colspan=2 Artikel
          th.text-right Verk√§ufe
      tbody
        - products.each do |product|
          tr
            td width=120 = product_label(product)
            td
              span = link_to product.name, product_path(product), class: "link"
              br
              span.small.light = product.color_text
            td.text-right = product.quantity

  .panel__bar.panel__bar--bottom
    = link_to "Alle Artikel anzeigen...", products_path, class: "link"