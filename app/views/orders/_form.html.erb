<%= nested_form_for @order, remote: true do |f| %>

	<div class="row">
		<div class="small-12 columns">

			<% if @order.errors.any? %>

			  <div id="error_explanation">
			    <h4><%= pluralize(@order.errors.count, "error") %> prohibited
			      this post from being saved:</h4>

			    <ul>
				    <% @order.errors.full_messages.each do |msg| %>
				      <div data-alert class="alert-box alert">
				      	<li><%= msg %></li>
				      </div>
				    <% end %>
			    </ul>
			  </div>

			<% end %>

		</div>
	</div>

	<div class="row">
		<div class="small-12 medium-8 large-8 columns">
			<div class="panel contact-panel">
				<h4>H채ndler</h4>
				<p>
				  <%= f.label :contact_id, "H채ndler" %>
				  <%= f.collection_select(:contact_id, Contact.order(:name), :id, :name, class: "submittable") %>
				</p>
				<div class="row">
					<div class="small-12 medium-6 large-6 columns">
						<p>
					    <%= f.label :billing_address_id, "Rechnungsanschrift" %>	
					    <%= f.collection_select(:billing_address_id, Address.where(contact_id: @order.contact_id), :id, :name, prompt: "Rechnungsanschrift ausw채hlen...") %>
					  </p>
					</div>
					<div class="small-12 medium-6 large-6 columns">
						<p>
					    <%= f.label :delivery_address_id, "Lieferanschrift" %>	
					    <%= f.collection_select(:delivery_address_id, Address.where(contact_id: @order.contact_id), :id, :name) %>
					  </p>
					</div>
				</div>
		  </div>
		</div>
		
		<div class="small-12 medium-4 large-4 columns">
			<div class="panel">
			<h4>Status</h4>
		  <p>
		    <%= f.label :date_delivery, "Liefertermin" %>
		    <%= f.date_field :date_delivery %>
		  </p>
		  <p>
		    <%= f.label :date_completed, "Abgeschlossen am" %>
		    <%= f.date_field :date_completed %>
		  </p>
		  </div>
		</div>
	</div>

	<div class="row">
		<div class="small-12 columns">

			<div class="panel">

				<h3>Schuhe</h3>
				<%= f.fields_for :line_items %>
				<%= f.link_to_add "+", :line_items, class: "tiny button" %>

			</div>

		</div>
	</div>

	<div class="row">
		<div class="small-12 columns">
		  <p>
		  	<%= link_to 'Zur체ck', orders_path, class: "button secondary float_left" %>
		    <%= f.submit "Speichern", class: "button float_right" %>
		  </p>
	  </div>
	</div>

<% end %>