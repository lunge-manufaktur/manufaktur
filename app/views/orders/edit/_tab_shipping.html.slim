section
  .row
    .span-small-12.span-medium-4
      h5 Optionen
      .fields
        = f.label :shipping_cost, "Versandkosten"
        = f.text_field :shipping_cost

section
  h5 Pakete
  table.table--borderless.table--compact
    thead
      tr
        th Sendungsnummer
        th Versender
        th.text-right Gewicht
        th
    tbody#shipments
      = f.fields_for :shipments, wrapper: false do |shipment_form|
        tr.fields
          td = shipment_form.text_field :tracking_code
          td = shipment_form.collection_select :carrier_id, Carrier.all, :id, :name
          td.text-right width="100" = shipment_form.number_field :weight, class: "text-right"
          td.text-right width="30" = shipment_form.link_to_remove icon("clear", align: "right")
    tfooter
      tr
        td colspan=4 = f.link_to_add "Paket hinzuf√ºgen", :shipments, class: "link", data: { target: "#shipments" }