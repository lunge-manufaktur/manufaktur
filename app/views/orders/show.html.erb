<% @section = "Aufträge" %>

<!-- HEADER -->

<% content_for :breadcrumbs do %>
  <div class="row">
    <div class="small-12 columns">
      <ul class="breadcrumbs">
        <li><%= link_to "Home", "/" %></li>
        <li><%= render "/layouts/breadcrumbs/sections" %></li>
      </ul>
    </div>
  </div>
<% end %>

<% content_for :title_bar do %>
  <div class="row">
    <div class="large-9 small-9 columns">
      <h1 class="page-heading"><%= @order.id %></h1>
    </div>
    <div class="large-3 small-3 columns">
      <ul class="inline-list right">
        <li>
          <h2><%= link_to '', new_order_path, class: "ion-ios7-plus-outline toolbar" %></h2>
        </li>
      </ul>
    </div>
  </div>
<% end %>

<!-- End Header -->

<!-- MAIN CONTENT -->

<% content_for :main_content do %>
  
  <div class="row">

    <div class="small-12 medium-8 large-8 columns">
      <div class="panel">

        <div class="row">
          <div class="small-12 columns">
            <h4>Händler</h4>
            <h2><%= @order.contact.name %></h2>
          </div>
        </div>

        <div class="row">

          <div class="small-12 medium-6 large-6 columns">
            <p>
              <label>Rechnungsanschrift</label>
              <%= @order.billing_address.name %>
            </p>
          </div>

          <div class="small-12 medium-6 large-6 columns">
            <p>
              <label>Lieferanschrift</label>
            </p>
          </div>

        </div>  

      </div>
    </div>

    <div class="small-12 medium-4 large-4 columns">
      <div class="panel">
        <h4>Status</h4>
        <label>Liefertermin</label>
        <p><%= @order.date_delivery %>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="small-12 columns">
      <ul class="inline-list right">
        <li><%= link_to "Löschen", @order, confirm: "Wirklich löschen?", method: :delete, class: "button alert" %></li>
        <li><%= link_to "Bearbeiten", edit_order_path, class: "button" %></li>
      </ul>
    </div>
  </div>

<% end %>