<% content_for :secondary_sidebar do %>
  <div id="secondary-sidebar">

    <div class="secondary-sidebar-header">
      <%= search_form_for @search do |f| %>
        <%= f.search_field :contact_name_cont, placeholder: "Suchen...", id: "secondary-search-field" %>
      <% end %>
    </div>

    <ul class="secondary-itemlist">
      <% @orders.each do |order| %>
        <li class="sidebar-item <%= 'active' if @order.id == order.id %>">
          <a href="<%= order_path(order) %>">
            <span class="light"><%= order.id %></span><br>
            <div class="truncated"><%= order.contact.name %></div>
            <ul class="small-icon-list">
              <li><%= square_icon("ion-ios7-checkmark-empty") %></li>
              <li><%= square_icon("ion-ios7-star-outline") %></li>
              <li><%= square_icon("ion-ios7-cart-outline") %></li>
            </ul>
          </a>
        </li>
      <% end %>
    </ul>
        
       

  </div>
<% end %>