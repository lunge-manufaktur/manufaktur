= render "letters/common/search"
= render "letters/index/breadcrumbs"
= render "letters/index/sidebar"

- content_for :title_bar
	h1 Briefe

ul.inline-list
	li = link_to "Neuer Brief", new_letter_path, class: "button dense"

hr

table
	thead
		tr
			td width=100 Datum
			td Kontakt
			td Subject
			td width=100
	tbody
		- @letters.each do |letter|
			tr.link href=letter_path(letter)
				td = l letter.created_at, format: :date_only
				td = letter.name
				td = letter.subject
				td.text-right
					= link_to icon("pencil"), edit_letter_path(letter)

- content_for :footer
	.section.text-right
		hr
		= paginate @letters