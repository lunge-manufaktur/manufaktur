<% content_for :title_bar do %>
	<div class="row">
	  <div class="large-12 columns">
	    <h1><%= @variation_set.name %></h1>
	  </div>
	</div>
<% end %>

<!-- End Header -->

<!-- Side Bar -->

<%= render "products/sidebar" %>

<!-- End Side Bar -->

<!-- MAIN CONTENT -->

<% content_for :main_content do %>
	
	<div class="small-12 medium-10 large-10 columns">
		<div class="row">
			<div class="small-12 columns">
				<p class="section-label">Variationen</p>
			</div>
		</div>
	

		<div class="row">
			<div class="small-12 columns">
				<% @variation_set.variations.each do |v| %>
					<ul>
						<li><%= v.name %></li>
					</ul>
				<% end %>
			</div>
		</div>
		
		<div class="row">
			<div class="small-12 medium-4 large-6 columns">
			  <ul class="inline-list">
			  	<li><%= link_to 'Zurück', variation_sets_path, class: "button secondary float_left" %></li>
			  </ul>
	  	</div>
	  	<div class="small-12 medium-8 large-6 columns">
	  		<ul class="inline-list float_right">
	  			<li><%= link_to "Löschen", @variation_set, confirm: "Wirklich löschen?", method: :delete, class: "button alert" %></li>
	  			<li><%= link_to "Bearbeiten", edit_variation_set_path, class: "button" %></li>
	  		</ul>
	  	</div>
  	</div>

	</div>


  <div class="large-5 small-12 columns">
  	


  </div>

<% end %>