var current_item = $('section[data-line-item-id="' + <%= params["line_item_id"] %> + '"]')



// set line_item.price input field
current_item.find('#price-single-input').val(<%= @product.price %>)



// set correct size_set for selected product
<% @product.size_set.sizes_as_hash.each do |key, value| %>
  current_item.find('label[data-size=<%= key %>]').text("<%= value %>")
<% end %>



// set #price_total span
var price_total = <%= j params[:quantity] * 2 %>
current_item.find('#price_total').text(price_total)



// set line_item header styling
current_item.find('[data-role="select_product"]').css({
  "background-color": "<%= @product.primary_color %>",
  "border-bottom": "5px solid " + "<%= @product.secondary_color %>",
});

current_item.find('.selectize-input').css({
  "color": "<%= @product.text_color %>",
  "border-color": "<%= @product.text_color %>"
})