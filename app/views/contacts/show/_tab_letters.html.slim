.tab data-tab="letters"
  - if @contact.letters.empty?
    p.text-center = "Es gibt noch keine Briefe f√ºr #{@contact.name}."
    p.text-center = link_to "Brief schreiben...", new_letter_path, class: "button tiny"
  - else 
    table
      thead
        tr
          th width=100 Datum
          th Betreff
          th width=100
      tbody
        - @contact.letters.each do |letter|
          tr.link href=letter_path(letter)
            td = l letter.created_at, format: :date_only
            td = letter.subject
            td.text-right
              = icon("bracket-right")