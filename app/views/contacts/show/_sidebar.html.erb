<% content_for :sidebar do %>
  <div id="secondary-sidebar">

    <div class="secondary-sidebar-header">
      <%= search_form_for @search do |f| %>
        <%= f.search_field :name_or_addresses_city_cont, placeholder: "Suchen...", id: "secondary-search-field" %>
      <% end %>
    </div>

    <ul class="secondary-itemlist">
      <% @contacts.each do |contact| %>
        <%= render partial: "contacts/list_item", locals: { contact: contact } %>
      <% end %>
    </ul>

  </div>
<% end %>