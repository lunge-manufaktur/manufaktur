<table>

  <thead>
    <tr>
      <th class="" width="100">Kundennummer</th>
      <th>Name / Firma</th>
      <th width="120">Kategorie</th>   
      <th>Tags</th>
      <th width="100" class="cell-right">Aktionen</th>
    </tr>
  </thead>

  <tbody>
		<% @contacts.each do |contact| %>
			<%= render partial: "contacts/index/item_contact", locals: { contact: contact } %>
		<% end %>
  </tbody>
  <tfoot>
    <tr>
      <td class="text-right" colspan=5>
        <h4><span class="bold"><%= @contacts.count %> <span class="thin">Kontakte gefunden</span></h4>
      </td>
    </tr>
  </tfoot>
</table>